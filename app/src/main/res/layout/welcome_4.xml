<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingBottom="10dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/desc_padding"
                android:paddingRight="@dimen/desc_padding"
                android:text="Copy multiple texts from whatsapp messages even from different chats by Enabling Smart Copy."
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/desc_padding"
                android:paddingRight="@dimen/desc_padding"
                android:text="After enabling smart copy, you can use copy from cut copy paste menu on multiple texts for multiple times to copy all the texts together. Dont Forget to disable it after use"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                />

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:src="@drawable/screenshot_smart_copy"
            android:layout_height="350dp"
            android:layout_gravity="bottom"
            android:paddingBottom="@dimen/dots_margin_bottom"
            android:layout_marginTop="10dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="350dp"
            android:src="@drawable/smart_copy_whatsapp"
            android:layout_gravity="bottom"
            android:paddingBottom="@dimen/dots_margin_bottom"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
