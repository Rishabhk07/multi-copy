<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:layout_marginTop="10dp"
            android:text="All your copied texts will be shown in a dialog after you select multi copy from cut copy paste menu and you can select which text to paste here or all the text shown will be pasted together when you paste normally next time."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:id="@+id/textView" />

        <ImageView
            android:src="@drawable/screenshot_newshot_paste"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_gravity="bottom"
            android:paddingBottom="@dimen/dots_margin_bottom"
            android:layout_marginTop="14dp"
            />
        </LinearLayout>
</RelativeLayout>
