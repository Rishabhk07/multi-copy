<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen2">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="All your copied texts will be shown in a dialog after you select multi copy from cut copy paste menu and all the text shown will be pasted together when you paste next time."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
    <ImageView
        android:src="@drawable/screenshots_update_showtext"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/dots_margin_bottom"
        android:layout_marginTop="20dp"
        />
    </LinearLayout>
</RelativeLayout>
