<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="you can add all the copied texts to notes or you can start a new clip to the delete previous copied text and start copy with a new cleaned clip"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
    <ImageView
        android:src="@drawable/screenshot_add_to_notes"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/dots_margin_bottom"
        android:layout_marginTop="20dp"
        />
    </LinearLayout>
</RelativeLayout>
